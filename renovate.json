{
  "pinVersions": false,
  "semanticCommits": true,
  "semanticPrefix": "build",
  "separateMajorMinor": false,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageFiles": ["package.json", "integration/consumers/ng-cli/package.json"],
  "packageRules": [
    {
      "packagePatterns": ["^@angular.*"],
      "groupName": "angular",
      "pinVersions": false
    },
    {
      "packagePatterns": ["^@commitlint/.*"],
      "groupName": "commitlint",
      "pinVersions": false
    },
    {
      "packagePatterns": ["^jasmine.*"],
      "groupName": "jasmine",
      "pinVersions": false
    },
    {
      "packagePatterns": ["^karma.*"],
      "groupName": "karma",
      "pinVersions": false
    }
  ]
}
